{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LyricVault",
  "version": "0.5.0-prealpha.4",
  "identifier": "com.lyricvault.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "LyricVault",
        "width": 1400,
        "height": 900,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: lvmedia: https:; media-src 'self' asset: lvmedia:; connect-src 'self' tauri: https://generativelanguage.googleapis.com"
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis",
      "msi"
    ],
    "icon": [
      "../../../assets/icon.ico"
    ],
    "resources": [
      "../../../python-embed/**/*",
      "../../../ffmpeg/**/*",
      "../../../backend/**/*"
    ],
    "windows": {
      "nsis": {
        "displayLanguageSelector": true,
        "installMode": "perMachine"
      }
    }
  }
}