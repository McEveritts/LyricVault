{
    "name": "lyricvault",
    "version": "0.5.0-prealpha.4",
    "description": "Your personal music sanctuary - AI-powered lyric research and local music library",
    "main": "electron/main.js",
    "private": true,
    "scripts": {
        "dev": "npm run tauri -- dev",
        "dev:desktop": "npm run tauri -- dev",
        "build:desktop": "npm run tauri build",
        "tauri": "powershell -ExecutionPolicy Bypass -File scripts/run-tauri.ps1",
        "dev:legacy": "concurrently -k \"npm run dev:frontend\" \"npm run dev:electron\"",
        "dev:frontend": "npm --prefix frontend run dev",
        "dev:electron": "wait-on tcp:5173 && electron .",
        "build:frontend": "cd frontend && npm run build",
        "runtime:fetch": "powershell -ExecutionPolicy Bypass -File scripts/fetch-runtime-assets.ps1",
        "setup:python": "powershell -ExecutionPolicy Bypass -File scripts/setup-python.ps1",
        "setup:prealpha": "powershell -ExecutionPolicy Bypass -File SETUP_PREALPHA.ps1",
        "doctor:desktop-env": "powershell -ExecutionPolicy Bypass -File scripts/desktop-env-doctor.ps1",
        "audit": "npm run audit:node && npm run audit:frontend && npm run audit:python",
        "audit:node": "npm audit --audit-level=high",
        "audit:frontend": "npm --prefix frontend audit --audit-level=high",
        "audit:python": "powershell -ExecutionPolicy Bypass -File scripts/audit-python.ps1",
        "dist": "npm run dist:portable",
        "dist:installer": "npm run build:desktop",
        "dist:portable": "powershell -ExecutionPolicy Bypass -File scripts/build-tauri-portable.ps1",
        "dist:legacy": "npm run build:frontend && electron-builder",
        "dist:quick": "electron-builder"
    },
    "devDependencies": {
        "concurrently": "^9.2.1",
        "electron": "^35.0.0",
        "electron-builder": "^26.7.0",
        "wait-on": "^9.0.1"
    },
    "author": "McEveritts",
    "license": "MIT"
}